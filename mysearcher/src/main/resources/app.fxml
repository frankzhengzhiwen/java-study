<?import javafx.geometry.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.cell.*?>
<GridPane fx:controller="app.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
<!--    <padding>-->
<!--        <Insets top="10" right="10" bottom="10" left="10" />-->
<!--    </padding>-->

    <Text text="请输入想要搜索的文件名，支持拼音" GridPane.columnIndex="0" GridPane.rowIndex="0" />
    <TextField fx:id="searchField" GridPane.columnIndex="0" GridPane.rowIndex="1" prefWidth="900" />

    <TableView fx:id="fileTable" GridPane.columnIndex="0" GridPane.rowIndex="2" GridPane.columnSpan="2" prefWidth="900" prefHeight="700">
        <columns>
            <TableColumn text="名称" fx:id="nameColumn" prefWidth="220">
                <cellValueFactory>
                    <PropertyValueFactory property="name" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn text="路径" prefWidth="400">
                <cellValueFactory>
                    <PropertyValueFactory property="path"/>
                </cellValueFactory>
            </TableColumn>
            <TableColumn text="大小" fx:id="sizeColumn" prefWidth="120">
                <cellValueFactory>
                    <PropertyValueFactory property="sizeText" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn text="修改时间" fx:id="lastModifiedColumn" prefWidth="160">
                <cellValueFactory>
                    <PropertyValueFactory property="lastModifiedText" />
                </cellValueFactory>
            </TableColumn>
        </columns>
    </TableView>
</GridPane>